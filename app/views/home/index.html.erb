<%= raw SiteConfig.index_html %>
 
<div class="home_suggest_topics box box-gray">
  <h2>社区精华帖</h2>
  <div class="topics">
    <% cache(@excellent_topics) do %>
      <%= render partial: "topics/topic", collection: @excellent_topics, locals: { suggest: false } %>
    <% end %>
  </div>
  <div class="more">
    <%= link_to "查看更多精华帖...", excellent_topics_path %>
  </div>
</div>
<% if !mobile? %>
  <%= render "/shared/index_sections" %>
  <% if false %>
    <%= render "/shared/hot_locations" %>
  <% end %>
<% end %>
